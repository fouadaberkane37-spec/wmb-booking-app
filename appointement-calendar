    <div class="modal" id="appointmentModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Appointment Details</h2>
                <button class="modal-close" id="closeModal">√ó</button>
            </div>
            <div id="appointmentDetails"></div>
