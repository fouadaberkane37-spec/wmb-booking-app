    <script>
        // Check login
        const loggedIn = localStorage.getItem('wmb_logged_in') || sessionStorage.getItem('wmb_logged_in');
        if (loggedIn !== 'true') {
            window.location.href = 'index.html';
        }

        // State
        let currentYear = new Date().getFullYear();
        let currentMonth = new Date().getMonth();
        let appointments = [];

        // Generate appointments
        function generateAppointments() {
            const apts = [];
            const services = [
                ['Window cleaning - exterior'],
                ['Window cleaning - interior'],
                ['Gutter cleaning - exterior', 'Soft wash'],
                ['Gutter cleaning - interior'],
                ['Window cleaning - exterior', 'Window cleaning - interior']
            ];
            const salespeople = ['John Smith', 'Sarah Johnson', 'Michael Brown', 'Emily Davis'];
            const durations = [60, 120, 180];

            const today = new Date();
            const startDate = new Date(today.getFullYear(), today.getMonth() - 1, 1);
            const endDate = new Date(2030, 11, 31);

            let date = new Date(startDate);
            
            while (date <= endDate) {
                if (Math.random() < 0.3) {
                    const hour = 7 + Math.floor(Math.random() * 10);
                    const minutes = Math.random() > 0.5 ? 0 : 30;
                    
                    apts.push({
                        id: Date.now() + Math.random(),
                        date: new Date(date),
                        time: `${String(hour).padStart(2, '0')}:${String(minutes).padStart(2, '0')}`,
                        duration: durations[Math.floor(Math.random() * durations.length)],
                        salesperson: salespeople[Math.floor(Math.random() * salespeople.length)],
                        customerName: `Customer ${Math.floor(Math.random() * 1000)}`,
                        email: `customer${Math.floor(Math.random() * 1000)}@example.com`,
                        phone: `+1 (555) ${Math.floor(Math.random() * 900) + 100}-${Math.floor(Math.random() * 9000) + 1000}`,
                        services: services[Math.floor(Math.random() * services.length)],
                        address: `${Math.floor(Math.random() * 9999)} Main St, City, State`,
                        notes: Math.random() > 0.7 ? 'Special instructions' : ''
                    });
                }
                
                date.setDate(date.getDate() + 1);
            }

            return apts;
        }

        appointments = generateAppointments();

        function getDateKey(date) {
            return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`;
        }

        function getAppointmentsForDate(date) {
            const key = getDateKey(date);
            return appointments.filter(apt => getDateKey(apt.date) === key);
        }

        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            grid.innerHTML = '';

            const displayDate = new Date(currentYear, currentMonth, 1);
            document.getElementById('monthDisplay').textContent = 
                displayDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });

            ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'].forEach(day => {
                const header = document.createElement('div');
                header.className = 'day-header';
                header.textContent = day;
                grid.appendChild(header);
            });

            const firstDay = new Date(currentYear, currentMonth, 1).getDay();
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
            const prevMonthDays = new Date(currentYear, currentMonth, 0).getDate();

            const today = new Date();
            today.setHours(0, 0, 0, 0);

            for (let i = firstDay - 1; i >= 0; i--) {
                const dayDiv = document.createElement('div');
                dayDiv.className = 'calendar-day other-month';
                dayDiv.innerHTML = `<div class="day-number">${prevMonthDays - i}</div>`;
                grid.appendChild(dayDiv);
            }

            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(currentYear, currentMonth, day);
                date.setHours(0, 0, 0, 0);

                const dayDiv = document.createElement('div');
                dayDiv.className = 'calendar-day';

                if (date.getTime() === today.getTime()) {
                    dayDiv.classList.add('today');
                }

                const appts = getAppointmentsForDate(date);

                let html = `<div class="day-number">${day}</div>`;

                if (appts.length > 0) {
                    html += '<div class="appointments-list">';
                    appts.forEach(apt => {
                        html += `
                            <div class="appointment-item" onclick="showAppointment(${apt.id})">
                                <span class="appointment-time">${apt.time}</span> ${apt.customerName}
                            </div>
                        `;
                    });
                    html += '</div>';
                }

                dayDiv.innerHTML = html;
                grid.appendChild(dayDiv);
            }

            const totalCells = Math.ceil((firstDay + daysInMonth) / 7) * 7;
            const remainingCells = totalCells - (firstDay + daysInMonth);

            for (let i = 1; i <= remainingCells; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.className = 'calendar-day other-month';
                dayDiv.innerHTML = `<div class="day-number">${i}</div>`;
                grid.appendChild(dayDiv);
            }

            updateStats();
        }

        function updateStats() {
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const todayEnd = new Date(today);
            todayEnd.setHours(23, 59, 59);

            const weekStart = new Date(today);
            weekStart.setDate(today.getDate() - today.getDay());
            const weekEnd = new Date(weekStart);
            weekEnd.setDate(weekStart.getDate() + 6);
            weekEnd.setHours(23, 59, 59);

            const monthStart = new Date(currentYear, currentMonth, 1);
            const monthEnd = new Date(currentYear, currentMonth + 1, 0);
            monthEnd.setHours(23, 59, 59);

            const todayApts = appointments.filter(apt => apt.date >= today && apt.date <= todayEnd);
            const weekApts = appointments.filter(apt => apt.date >= weekStart && apt.date <= weekEnd);
            const monthApts = appointments.filter(apt => apt.date >= monthStart && apt.date <= monthEnd);
            const monthHours = monthApts.reduce((sum, apt) => sum + apt.duration, 0) / 60;

            document.getElementById('totalAppointments').textContent = appointments.length;
            document.getElementById('todayAppointments').textContent = todayApts.length;
            document.getElementById('weekAppointments').textContent = weekApts.length;
            document.getElementById('monthHours').textContent = monthHours.toFixed(1);
        }

        function showAppointment(id) {
            const apt = appointments.find(a => a.id === id);
            if (!apt) return;

            const endTime = new Date();
            const [hours, minutes] = apt.time.split(':').map(Number);
            endTime.setHours(hours);
            endTime.setMinutes(minutes + apt.duration);

            document.getElementById('appointmentDetails').innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">Date & Time</span>
                    <div class="detail-value">
                        ${apt.date.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' })}<br>
                        ${apt.time} - ${endTime.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })} (${apt.duration} min)
                    </div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Salesperson</span>
                    <div class="detail-value">${apt.salesperson}</div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Customer</span>
                    <div class="detail-value">${apt.customerName}</div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Email</span>
                    <div class="detail-value">${apt.email}</div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Phone</span>
                    <div class="detail-value">${apt.phone}</div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Services</span>
                    <div class="services-list">
                        ${apt.services.map(s => `<span class="service-tag">${s}</span>`).join('')}
                    </div>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Address</span>
                    <div class="detail-value">${apt.address}</div>
                </div>
                ${apt.notes ? `<div class="detail-row"><span class="detail-label">Notes</span><div class="detail-value">${apt.notes}</div></div>` : ''}
            `;

            document.getElementById('appointmentModal').classList.add('show');
        }

        // Navigation
        document.getElementById('prevBtn').addEventListener('click', function() {
            currentMonth--;
            if (currentMonth < 0) {
                currentMonth = 11;
                currentYear--;
            }
            renderCalendar();
        });

        document.getElementById('nextBtn').addEventListener('click', function() {
            currentMonth++;
            if (currentMonth > 11) {
                currentMonth = 0;
                currentYear++;
            }
            renderCalendar();
        });

        document.getElementById('todayBtn').addEventListener('click', function() {
            const now = new Date();
            currentYear = now.getFullYear();
            currentMonth = now.getMonth();
            renderCalendar();
        });

        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('appointmentModal').classList.remove('show');
        });

        document.getElementById('appointmentModal').addEventListener('click', function(e) {
            if (e.target.id === 'appointmentModal') {
                document.getElementById('appointmentModal').classList.remove('show');
            }
        });

        document.getElementById('exportBtn').addEventListener('click', function() {
            const csv = ['Date,Time,Duration,Salesperson,Customer,Email,Phone,Services,Address,Notes'];

            appointments.forEach(apt => {
                csv.push([
                    apt.date.toLocaleDateString(),
                    apt.time,
                    apt.duration,
                    apt.salesperson,
                    apt.customerName,
                    apt.email,
                    apt.phone,
                    `"${apt.services.join(', ')}"`,
                    `"${apt.address}"`,
                    `"${apt.notes}"`
                ].join(','));
            });

            const blob = new Blob([csv.join('\n')], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `appointments-${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
        });

        document.getElementById('hamburgerBtn').addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('dropdownMenu').classList.toggle('show');
        });

        document.addEventListener('click', function(e) {
            const menu = document.getElementById('dropdownMenu');
            const btn = document.getElementById('hamburgerBtn');
            if (!menu.contains(e.target) && !btn.contains(e.target)) {
                menu.classList.remove('show');
            }
        });

        document.getElementById('logoutBtn').addEventListener('click', function(e) {
            e.preventDefault();
            localStorage.removeItem('wmb_logged_in');
            localStorage.removeItem('wmb_user_email');
            sessionStorage.removeItem('wmb_logged_in');
            sessionStorage.removeItem('wmb_user_email');
            window.location.href = 'index.html';
        });

        window.showAppointment = showAppointment;

        renderCalendar();
    </script>
</body>
</html>
